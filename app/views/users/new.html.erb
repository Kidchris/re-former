<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2 style="color:orange;"><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul style="color:red;">
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @user do |form| %>
  <%= form.label "Name :" %>
  <%= form.text_field :name, placeholder:"Chris" %> <br><br>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "email@example.com" %><br><br>
  <%= form.label :password %>
  <%= form.password_field :password %><br><br>
  <%= form.submit "Submit form" %>
<% end %>